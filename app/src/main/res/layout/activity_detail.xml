<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical">
    <TextView
        android:id="@+id/id_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5d5d5d"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/slug_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#201adf"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/total_videos_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#201adf"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/shortname_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#201adf"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/category_url_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#201adf"
        android:textStyle="bold" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_iamge_detail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:placeholderImage="@drawable/my_drawable"
        fresco:roundedCornerRadius="5dp"
        fresco:roundBottomStart="false"
        fresco:roundBottomEnd="false"
        fresco:roundWithOverlayColor="@color/blue"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="@color/red"/>

</LinearLayout>